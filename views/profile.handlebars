<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Report:</h3>

    <form class="form new-driver-form">
      <div class="form-group">
        <label for="driver-plate">License Plate:</label>
        <input class="form-input" type="text" id="driver-plate" name="driver-plate" />
      </div>
      <div class="form-group">
        <label for="driver-make">Vehicle Make::</label>
        <input class="form-input" type="text" id="driver-make" name="driver-make" />
      </div>
       <div class="form-group">
        <label for="driver-model">Vehicle Model:</label>
        <input class="form-input" type="text" id="driver-model" name="driver-model" />
      </div>
      <div class="form-group">
        <label for="driver-incident">Incident:</label>
        <textarea class="form-input" id="driver-incident" name="driver-incident"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if drivers.length}}
  <div class="col-md-6 report-list">
    <h3>Current Reports:</h3>

    {{#each drivers as |driver|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/drivers/{{driver.id}}">{{driver.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{driver.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
